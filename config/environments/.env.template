# OpenCode-Slack Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in the values
# DO NOT commit files with actual secrets to version control

# =============================================================================
# REQUIRED CONFIGURATION - Must be set for the application to work
# =============================================================================

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Slack Configuration
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_BOT_TOKEN=your_slack_bot_token_here

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64
ADMIN_PASSWORD=your_admin_password_here

# =============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATION
# =============================================================================

# Environment Type (development, staging, production)
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
DEBUG_MODE=true

# Database Configuration
DATABASE_PATH=employees.db
SESSIONS_DIR=sessions

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# =============================================================================
# OPTIONAL CONFIGURATION - Has sensible defaults
# =============================================================================

# Performance Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=300
MAX_CONCURRENT_SESSIONS=10
MAX_CONCURRENT_TASKS=100
MAX_API_REQUESTS_PER_MINUTE=100
CONNECTION_POOL_SIZE=20

# Database Performance
MAX_DB_CONNECTIONS=20
ENABLE_WAL_MODE=true
BATCH_SIZE=100
CACHE_TTL_SECONDS=30

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_METRICS_INTERVAL=30
MONITORING_HEALTH_INTERVAL=30
MONITORING_ALERT_INTERVAL=15
MONITORING_DASHBOARD_PORT=8083
MONITORING_DASHBOARD_HOST=0.0.0.0
MONITORING_AUTO_RECOVERY=true
MONITORING_RETENTION_DAYS=30
MONITORING_ENABLE_DASHBOARD=true
MONITORING_ENABLE_MOBILE=true

# Dashboard Security
DASHBOARD_SECRET_KEY=your_dashboard_secret_key_here

# Model Configuration
DEFAULT_MODEL=openrouter/google/gemini-2.5-pro
MODELS_CONFIG_FILE=config/models.json

# Project Configuration
PROJECT_ROOT=/path/to/project/root
PROGRESS_FILE_NAME=current_task.md
COMPLETED_TASKS_DIR=completed_tasks
OPENCODE_COMMAND=opencode

# Development/Testing Configuration
OPENCODE_SAFE_MODE=false
ASYNC_SERVER_URL=http://localhost:8080
OPENCODE_SERVER_URL=http://localhost:8080

# =============================================================================
# ALERTING CONFIGURATION - Optional
# =============================================================================

# Email Alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_SMTP_USER=your_email@gmail.com
ALERT_EMAIL_SMTP_PASSWORD=your_email_password
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com,ops@yourcompany.com

# Slack Alerts
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SLACK_CHANNEL=#alerts
ALERT_SLACK_USERNAME=OpenCode-Slack Monitor

# Webhook Alerts
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
ALERT_WEBHOOK_HEADERS={"Authorization": "Bearer your-token", "Content-Type": "application/json"}

# =============================================================================
# REDIS CONFIGURATION - Optional
# =============================================================================
REDIS_PASSWORD=changeme

# =============================================================================
# GRAFANA CONFIGURATION - Optional
# =============================================================================
GRAFANA_PASSWORD=admin